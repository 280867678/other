<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="supremeAppearance" parent="">
        <item name="android:textSize">52sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
    </style>


    <style name="PlaybackDarkTheme" parent="@style/Base.Playback.Dark">
        <item name="colorAccent">@color/darkgray_accent</item>
        <item name="alertDialogTheme">@style/DarkGrayAlertDialogTheme</item>
    </style>




    <style name="DarkGrayAlertDialogTheme" parent="@style/AlertDialog.DarkBase">
        <item name="colorAccent">@color/darkgray_accent</item>
        <item name="alertDialogTheme">@style/DarkGrayAlertDialogTheme</item>
    </style>


    <style name="AlertDialog.DarkBase" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="android:windowBackground">@color/background_material_dark</item>
    </style>











    <style name="Base.Playback.Dark" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarStyle">@style/PlaybackActionBarStyle</item>
        <item name="actionBarTheme">@style/ActionBarTheme.Playback.Dark</item>
<!--        <item name="panel_bottombar_background">@drawable/bottombar_back_black</item>-->
        <!--        <item name="toolbar_layout">@layout/screen_toolbar</item>-->
    </style>

    <style name="PlaybackActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="displayOptions">showTitle|homeAsUp</item>
        <item name="titleTextStyle">@style/TextAppearance.ActionBar.Title.White</item>
        <item name="titleTextAppearance">@style/TextAppearance.ActionBar.Title.White</item>
    </style>

    <style name="TextAppearance.ActionBar.Title.White" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionBarTheme.Playback.Dark" parent="@style/Platform.ActionBarTheme.Playback.Dark">
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>
    <style name="Platform.ActionBarTheme.Playback.Dark" parent="@style/ActionBarTheme.Playback.Dark">
    </style>









</resources>