<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/vod_speed_rate_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/vod_player_menu_text_selector"
        android:textSize="@dimen/vod_player_menu_text_size" />

    <ImageView
        android:id="@+id/vod_speed_rate_vip_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/vod_speed_rate_item_tv"
        android:src="@drawable/bxbb_speed_rate_vip_ic"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/vod_speed_rate_year_vip_iv"
        android:layout_width="15dp"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/vod_speed_rate_vip_iv"
        android:src="@drawable/speed_rate_year_vip_ic"
        android:visibility="gone" />
</RelativeLayout>
