<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_write_comment"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:layout_gravity="bottom"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/tv_write_comment"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_weight="1"
        android:background="@drawable/comment_input_layout_selector"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="@string/tips_write_comment"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#5a6473"
        android:textColorHint="#5a6473"
        android:textSize="13sp"
        android:visibility="visible" />
</LinearLayout>
