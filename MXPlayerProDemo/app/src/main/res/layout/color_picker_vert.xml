<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0px" android:layout_weight="1">
            <com.mxtech.widget.ColorPicker2 android:id="@+id/picker" android:layout_width="wrap_content" android:layout_height="wrap_content" app:color_pointer_radius="15dp" app:color_pointer_halo_radius="19dp"/>
            <com.mxtech.widget.SaturationBar2 android:id="@+id/saturation_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" app:bar_pointer_halo_radius="17dp"/>
            <com.mxtech.widget.ValueBar2 android:id="@+id/value_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" app:bar_pointer_halo_radius="17dp"/>
            <com.mxtech.widget.OpacityBar2 android:id="@+id/opacity_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" app:bar_pointer_halo_radius="17dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/rgba_input" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="R: "/>
            <EditText android:id="@+id/red" android:nextFocusDown="@android:id/button1" style="@style/ColorPickerInputTextStyle"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="  G: "/>
            <EditText android:id="@+id/green" android:nextFocusDown="@android:id/button1" style="@style/ColorPickerInputTextStyle"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="  B: "/>
            <EditText android:id="@+id/blue" android:nextFocusDown="@android:id/button1" style="@style/ColorPickerInputTextStyle"/>
            <TextView android:id="@+id/alpha_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="  A: "/>
            <EditText android:id="@+id/alpha" android:nextFocusDown="@android:id/button1" style="@style/ColorPickerInputTextStyle"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
