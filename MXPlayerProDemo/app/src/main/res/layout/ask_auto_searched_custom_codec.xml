            <TextView android:textSize="15sp" android:textColor="?android:attr/textColorSecondary" android:id="@+id/path" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <TextView android:textSize="15sp" android:textColor="?android:attr/textColorSecondary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="@string/detail_size"/>
            <TextView android:textSize="15sp" android:textColor="?android:attr/textColorSecondary" android:id="@+id/size" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <TextView android:textSize="15sp" android:textColor="?android:attr/textColorSecondary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="@string/detail_date"/>
            <TextView android:textSize="15sp" android:textColor="?android:attr/textColorSecondary" android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
